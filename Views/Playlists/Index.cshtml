@model IEnumerable<MusicMatch.Models.Playlist>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-white">My Playlists</h1>

    <div class="mb-4">
        <a asp-action="Create" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg">Create New Playlist</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var playlist in Model)
        {
            <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
                <div class="p-6">
                    <h2 class="text-xl font-semibold text-white mb-2">@playlist.Name</h2>
                    <p class="text-gray-400 mb-4">
                        @if (!string.IsNullOrEmpty(playlist.Description))
                        {
                            @playlist.Description
                        }
                        else
                        {
                            <span class="text-gray-500 italic">No description provided.</span>
                        }
                    </p>

                    <p class="text-gray-500 text-sm"><strong>Visibility:</strong> @playlist.Visibility</p>

                    <div class="flex justify-between items-center mt-4">
                        <a asp-action="Details" asp-route-id="@playlist.Id" class="text-blue-400 hover:text-blue-300">View Details</a>

                        <div class="flex space-x-2">
                            <a asp-action="Edit" asp-route-id="@playlist.Id" class="text-green-400 hover:text-green-300">Edit</a>
                            <a asp-action="Delete" asp-route-id="@playlist.Id" class="text-red-400 hover:text-red-300">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-gray-500 py-8">
            <p>No playlists found. Start by creating one!</p>
        </div>
    }
</div>
