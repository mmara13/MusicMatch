@model IEnumerable<MusicMatch.Models.Artist>

<h2>Artists</h2>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search artists" />
    <button type="submit" class="btn btn-primary ml-2">Search</button>
</form>

<table class="table text-light">
    <thead>
        <tr>
            <th>Name</th>
            <th>Songs</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artist in Model)
        {
            <tr>
                <td>@artist.Name</td>
                <td>@artist.Songs?.Count</td>
                <td>
                   
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Details" asp-route-id="@artist.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@artist.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@artist.Id" class="btn btn-danger">Delete</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success">Add New Artist</a>
}
