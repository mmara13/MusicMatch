body {
    font-family: Arial, sans-serif;
    background-color: #f4f7fa;
    color: #333;
}

h1 {
    font-size: 3rem;
    color: #234687;
    text-align: center;
    margin-top: 40px;
}

h2 {
    font-size: 1.8rem;
    color: #234687;
    margin-top: 20px;
}

ul li {
    margin-bottom: 15px;
    padding-left: 20px;
}

ul li:before {
    content: "•";
    color: #5c94ff;
    position: absolute;
    left: 0;
    top: 0;
}

.contact-info {
    text-align: center;
    margin-top: 30px;
}

.contact-info a {
    color: #5c94ff;
    font-weight: bold;
}
