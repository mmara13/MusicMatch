@model List<MusicMatch.Models.UserReport>

<h1>User Reports</h1>

@if (!Model.Any())
{
    <p>No reports found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Reported By</th>
                <th>Reason</th>
                <th>Reported At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.ReportedUser.UserName</td>
                    <td>@report.ReportedBy.UserName</td>
                    <td>@report.Reason</td>
                    <td>@report.ReportedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Resolve" asp-route-id="@report.Id" class="btn btn-success btn-sm">Resolve</a>
                        <a asp-action="Delete" asp-route-id="@report.Id" class="btn btn-danger btn-sm">Delete</a>
                        <a asp-action="Details" asp-route-id="@report.ReportedUserId" class="btn btn-info">View</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
