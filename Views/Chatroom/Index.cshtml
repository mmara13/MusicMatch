@model IEnumerable<MusicMatch.Models.ChatRoom>

@{
    ViewData["Title"] = "Chat Rooms";
}

<h1 class="page-title">Chatrooms</h1>

<div class="chatroom-grid">
    @if (Model != null && Model.Any())
    {
        @foreach (var chatRoom in Model)
        {
            <div class="chatroom-card">
                <div class="chatroom-content">
                    <h3>@chatRoom.Name</h3>
                    <p class="created-on">Created on: @chatRoom.CreatedAt.ToString("yyyy-MM-dd")</p>
                </div>
                <div class="chatroom-actions">
                    <a asp-controller="ChatRoom" asp-action="EnterRoom" asp-route-id="@chatRoom.Id" class="btn btn-primary">
                        Join Room
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <p class="no-chatrooms-message">No chat rooms available at the moment.</p>
    }
</div>

<!-- Styling --><style>
                    body {
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                        background-color: #eceffb;
                        color: #234687;
                        margin: 0;
                        padding: 0;
                    }

                    .page-title {
                        font-size: 2.8rem;
                        font-weight: 600;
                        margin: 20px 0;
                        color: #5B6B86;
                        text-align: left;
                        text-transform: capitalize;
                    }

                    .chatroom-grid {
                        display: grid;
                        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                        gap: 20px;
                        padding: 20px;
                        max-width: 1200px;
                        margin: 0 auto;
                    }

                    .chatroom-card {
                        background-color: #374151;
                        border: 2px solid #5B6B86;
                        border-radius: 15px;
                        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
                        padding: 20px;
                        display: flex;
                        flex-direction: column;
                        justify-content: space-between;
                        text-align: center;
                        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
                    }

                        .chatroom-card:hover {
                            transform: translateY(-5px);
                            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                            background-color: #5B6B86;
                        }

                    .chatroom-content h3 {
                        margin: 0 0 10px;
                        font-size: 1.9rem;
                        color: #ffffff;
                        font-weight: 500;
                    }

                    .chatroom-content p {
                        margin: 5px 0;
                        font-size: 1rem;
                        color: #374151;
                    }

                    .chatroom-content .created-on {
                        font-size: 0.95rem;
                        color: #6b7280;
                    }

                    .chatroom-actions {
                        margin-top: 20px;
                    }

                    .btn {
                        padding: 5px 24px;
                        font-size: 1.1rem;
                        color: white;
                        text-decoration: none;
                        border-radius: 25px;
                        background-color: #5B6B86;
                        display: inline-block;
                        transition: background-color 0.3s ease-in-out;
                        font-weight: 600;
                    }

                    .btn-primary:hover {
                        background-color: #1F2937;
                    }

                    .no-chatrooms-message {
                        text-align: center;
                        font-size: 1.3rem;
                        color: #6b7280;
                        padding: 20px;
                    }
</style>