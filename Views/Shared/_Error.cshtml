@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4 text-red-600">Error</h1>
    <p class="text-gray-700 mb-4">@(Model?.Message ?? "An error occurred while processing your request.")</p>

    @if (Model?.ShowRequestId ?? false)
    {
        <p class="text-gray-500">
            <strong>Request ID:</strong> @Model.RequestId
        </p>
    }

    <a href="/" class="inline-block mt-4 px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
        Return Home
    </a>
</div>